<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".animationdemo.AnimationDemoActivity">

    <TextView
        android:id="@+id/activity_title"
        style="@style/MainActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Animation Demo" />

    <TextView
        android:id="@+id/activity_description"
        style="@style/MainActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click each button below to see the animation effect" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/linear_interpolator_button"
        style="@style/DemoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="Linear Interpolator Demo" />

</LinearLayout>